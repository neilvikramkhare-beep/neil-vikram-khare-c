#include <stdio.h>
#include <string.h>
#include <ctype.h>
#include <math.h>
int main()
{
    char str[] = "Hello, World!";
    printf("Length of string \"%s\" is: %zu\n", str, strlen(str));
    char ch = 'a';
    printf("Uppercase of '%c' is '%c'\n", ch, toupper(ch));
    ch = 'Z';
    printf("Lowercase of '%c' is '%c'\n", ch, tolower(ch));
    char str1[] = "apple";
    char str2[] = "banana";
    int result = strcmp(str1, str2);
    if (result == 0)
        printf("Strings are equal\n");
    else if (result < 0)
        printf("\"%s\" comes before \"%s\"\n", str1, str2);
    else
        printf("\"%s\" comes after \"%s\"\n", str1, str2);
    double num = 25.0;
    printf("Square root of %.2f is %.2f\n", num, sqrt(num));
    double base = 2.0, exponent = 3.0;
    printf("%.1f raised to %.1f is %.1f\n", base, exponent, pow(base, exponent));
    char input = '5';
    if (isdigit(input))
        printf("'%c' is a digit.\n", input);
    else if (isalpha(input))
        printf("'%c' is an alphabet.\n", input);
    else
        printf("'%c' is neither a digit nor an alphabet.\n", input);
    return 0;
}
