#include <stdio.h>
int sum(int n)
{
    if (n == 0)
    {
        return 0;
    }
    else
    {
        return n + sum(n - 1); 
    }
}
int main() 
{
    int n;
    int result;
    printf("\n enter a number:\n");
    scanf("%d", &n);
    result = sum(n);
    printf("sum of numbers is:%d\n", result);
    return 0;
}
