#include <stdio.h>
#include <string.h>
int main()
{
    char str[100], reversedStr[100];
    int length, i, j;
    printf("Enter a string: ");
    gets(str);
    length = strlen(str);
    for (i = length - 1, j = 0; i >= 0; i--, j++) {
        reversedStr[j] = str[i];
    }
    reversedStr[j] = '\0';
    printf("Reversed string: %s\n", reversedStr);
    return 0;
}
