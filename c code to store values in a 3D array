#include <stdio.h>
int main() 
{
    int arr[2][2][3]; 
    int i, j, k;
    printf("Enter 12 values for the 3D array:\n");
    for (i = 0; i < 2; i++)
     {
        for (j = 0; j < 2; j++)
         {
            for (k = 0; k < 3; k++) 
            {
                printf("Enter value for arr[%d][%d][%d]: ", i, j, k);
                scanf("%d", &arr[i][j][k]);
            }
        }
    }
    printf("\nThe values in the 3D array are:\n");
    for (i = 0; i < 2; i++)
     {
        for (j = 0; j < 2; j++) 
        {
            for (k = 0; k < 3; k++) 
            {
                printf("arr[%d][%d][%d] = %d\n", i, j, k, arr[i][j][k]);
            }
        }
    }
    return 0;
}
