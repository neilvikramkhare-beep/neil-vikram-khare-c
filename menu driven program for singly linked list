#include <stdio.h>
#include <stdlib.h>
typedef struct Node {
    int data;
    struct Node* next;
} Node;
Node* insertAtBeginning(Node* head, int data);
Node* insertAtEnd(Node* head, int data);
Node* insertBefore(Node* head, int target, int data);
Node* insertAfter(Node* head, int target, int data);
Node* deleteFromBeginning(Node* head);
Node* deleteFromEnd(Node* head);
Node* deleteBefore(Node* head, int target);
Node* deleteAfter(Node* head, int target);
int searchNode(Node* head, int target);
Node* mergeLists(Node* head1, Node* head2);
int countNodes(Node* head);
void displayList(Node* head);
void freeList(Node* head);
int main() {
    Node* head1 = NULL;
    Node* head2 = NULL;
    Node* mergedHead = NULL;
    int choice, data, target, pos;
    printf("Menu Driven Program for Singly Linked List\n");
    do {
        printf("\n--- Main Menu ---\n");
        printf("1. Insert at beginning\n");
        printf("2. Insert at end\n");
        printf("3. Insert before a number\n");
        printf("4. Insert after a number\n");
        printf("5. Delete from beginning\n");
        printf("6. Delete from end\n");
        printf("7. Delete before a specific node\n");
        printf("8. Delete after a specific node\n");
        printf("9. Search a specific node\n");
        printf("10. Count nodes in the list\n");
        printf("11. Merge two linked lists\n");
        printf("12. Display the list\n");
        printf("0. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);
        switch(choice) {
            case 1:
                printf("Enter data to insert at beginning: ");
                scanf("%d", &data);
                head1 = insertAtBeginning(head1, data);
                break;
            case 2:
                printf("Enter data to insert at end: ");
                scanf("%d", &data);
                head1 = insertAtEnd(head1, data);
                break;
            case 3:
                printf("Enter the number before which to insert: ");
                scanf("%d", &target);
                printf("Enter data to insert: ");
                scanf("%d", &data);
                head1 = insertBefore(head1, target, data);
                break;
            case 4:
                printf("Enter the number after which to insert: ");
                scanf("%d", &target);
                printf("Enter data to insert: ");
                scanf("%d", &data);
                head1 = insertAfter(head1, target, data);
                break;
            case 5:
                head1 = deleteFromBeginning(head1);
                break;
            case 6:
                head1 = deleteFromEnd(head1);
                break;
            case 7:
                printf("Enter the node before which to delete: ");
                scanf("%d", &target);
                head1 = deleteBefore(head1, target);
                break;
            case 8:
                printf("Enter the node after which to delete: ");
                scanf("%d", &target);
                head1 = deleteAfter(head1, target);
                break;
            case 9:
                printf("Enter the node to search: ");
                scanf("%d", &target);
                pos = searchNode(head1, target);
                if(pos == -1)
                    printf("Node with data %d not found.\n", target);
                else
                    printf("Node with data %d found at position %d.\n", target, pos);
                break;
            case 10:
                printf("Number of nodes in the list: %d\n", countNodes(head1));
                break;
            case 11:
                printf("Create first linked list:\n");
                freeList(head1);
                head1 = NULL;
                printf("Enter number of nodes: ");
                int n1; scanf("%d", &n1);
                for(int i=0; i<n1; i++) {
                    printf("Enter data for node %d: ", i+1);
                    scanf("%d", &data);
                    head1 = insertAtEnd(head1, data);
                }
                printf("Create second linked list:\n");
                freeList(head2);
                head2 = NULL;
                printf("Enter number of nodes: ");
                int n2; scanf("%d", &n2);
                for(int i=0; i<n2; i++) {
                    printf("Enter data for node %d: ", i+1);
                    scanf("%d", &data);
                    head2 = insertAtEnd(head2, data);
                }
                mergedHead = mergeLists(head1, head2);
                printf("Merged list is: ");
                displayList(mergedHead);
                freeList(head1);
                freeList(head2);
                head1 = mergedHead;
                head2 = NULL;
                mergedHead = NULL;
break;
 case 12:
                printf("Current list: ");
                displayList(head1);
                break;
case 0:
                printf("Exiting program...\n");
                break;
 default:
                printf("Invalid choice. Try again.\n");
        }
    } 
    while(choice != 0);
    freeList(head1);
    freeList(head2);
    freeList(mergedHead);
    return 0;
}
Node* insertAtBeginning(Node* head, int data) {
    Node* newNode = (Node*)malloc(sizeof(Node));
    if(!newNode) {
        printf("Memory allocation failed\n");
        return head;
    }
    newNode->data = data;
    newNode->next = head;
    return newNode;
}
Node* insertAtEnd(Node* head, int data) {
    Node* newNode = (Node*)malloc(sizeof(Node));
    if(!newNode) 
    {
        printf("Memory allocation failed\n");
        return head;
    }
    newNode->data = data;
    newNode->next = NULL;
    if(head == NULL) 
    {
        return newNode;
    }
    Node* temp = head;
    while(temp->next != NULL)
        temp = temp->next;
    temp->next = newNode;
    return head;
}
Node* insertBefore(Node* head, int target, int data) 
{
    if(head == NULL) 
    {
        printf("List is empty.\n");
        return head;
    }
    if(head->data == target)
     {
        return insertAtBeginning(head, data);
    }
    Node* prev = NULL;
    Node* curr = head;
    while(curr != NULL && curr->data != target) {
        prev = curr;
        curr = curr->next;
    }
    if(curr == NULL) {
        printf("Target %d not found.\n", target);
        return head;
    }
    Node* newNode = (Node*)malloc(sizeof(Node));
    if(!newNode) {
        printf("Memory allocation failed\n");
        return head;
    }
    newNode->data = data;
    newNode->next = curr;
    prev->next = newNode;
    return head;
}
Node* insertAfter(Node* head, int target, int data) 
{
    Node* curr = head;
    while(curr != NULL && curr->data != target) {
        curr = curr->next;
    }
    if(curr == NULL) 
    {
        printf("Target %d not found.\n", target);
        return head;
    }
    Node* newNode = (Node*)malloc(sizeof(Node));
    if(!newNode) 
    {
        printf("Memory allocation failed\n");
        return head;
    }
    newNode->data = data;
    newNode->next = curr->next;
    curr->next = newNode;
    return head;
}
Node* deleteFromBeginning(Node* head)
 {
    if(head == NULL)
     {
        printf("List is empty.\n");
        return NULL;
    }
    Node* temp = head;
    head = head->next;
    printf("Deleted node with data %d\n", temp->data);
    free(temp);
    return head;
}
Node* deleteFromEnd(Node* head) {
    if(head == NULL) {
        printf("List is empty.\n");
        return NULL;
    }
    if(head->next == NULL) {
        printf("Deleted node with data %d\n", head->data);
        free(head);
        return NULL;
    }
    Node* temp = head;
    Node* prev = NULL;
    while(temp->next != NULL) 
    {
        prev = temp;
        temp = temp->next;
    }
    prev->next = NULL;
    printf("Deleted node with data %d\n", temp->data);
    free(temp);
    return head;
}
Node* deleteBefore(Node* head, int target)
 {
    if(head == NULL || head->next == NULL) 
    {
        printf("Not enough nodes to delete before %d\n", target);
        return head;
    }
    if(head->data == target) 
    {
        printf("No node exists before the first node.\n");
        return head;
    }
    Node* prev = NULL;
    Node* curr = head;
    Node* next = head->next;
    if(next->data == target) 
    {
        printf("Deleted node with data %d\n", head->data);
        head = next;
        free(curr);
        return head;
    }
    while(next != NULL && next->data != target) 
    {
        prev = curr;
        curr = next;
        next = next->next;
    }
    if(next == NULL) 
    {
        printf("Target %d not found.\n", target);
        return head;
    }
    if(prev == NULL) 
    {
        printf("No node exists before target.\n");
        return head;
    }
    prev->next = curr->next;
    printf("Deleted node with data %d\n", curr->data);
    free(curr);
    return head;
}
Node* deleteAfter(Node* head, int target) 
{
    Node* curr = head;
    while(curr != NULL && curr->data != target)
     {
        curr = curr->next;
    }
    if(curr == NULL)
     {
        printf("Target %d not found.\n", target);
        return head;
    }
    if(curr->next == NULL) 
    {
        printf("No node exists after the target node.\n");
        return head;
    }
    Node* temp = curr->next;
    curr->next = temp->next;
    printf("Deleted node with data %d\n", temp->data);
    free(temp);
    return head;
}
int searchNode(Node* head, int target)
 {
    int pos = 1;
    Node* curr = head;
    while(curr != NULL)
     {
        if(curr->data == target) return pos;
        curr = curr->next;
        pos++;
    }
    return -1;
}
Node* mergeLists(Node* head1, Node* head2)
 {
    if(head1 == NULL) return head2;
    if(head2 == NULL) return head1;
 Node* temp = head1;
    while(temp->next != NULL)
        temp = temp->next;
    temp->next = head2;
    return head1;
}
int countNodes(Node* head) 
{
    int count = 0;
    Node* curr = head;
    while(curr != NULL) 
    {
        count++;
        curr = curr->next;
    }
    return count;
}
void displayList(Node* head) 
{
    if(head == NULL)
     {
        printf("List is empty.\n");
        return;
    }
    Node* curr = head;
    while(curr != NULL)
     {
        printf("%d -> ", curr->data);
        curr = curr->next;
    }
    printf("NULL\n");
}
void freeList(Node* head)
 {
    Node* temp;
    while(head != NULL) 
    {
        temp = head;
        head = head->next;
        free(temp);
    }
    printf("after deletion:\n");
    displaylist(head);
    return 0;
}
