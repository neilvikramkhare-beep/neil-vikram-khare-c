#include<stdio.h>
int main()
{
    int i,j,temp,n,a[i],minindex=0;
    printf("enter the number of elements in the array:\n");
    scanf("%d,n");
    printf("enter the elements:\n");
    for(i=0;i<n;i++)
    {
        scanf("%d,a[i]");
    }
    for(i=0;i<n-1;i++)
    {
        minindex=i;
        for(j=i+1;j<n;j++)
        {
            if(a[j]<a[minindex])
            {
                temp=a[minindex];
                a[minindex]=a[i];
                temp=a[i];
            }
            printf("sorted ascending order:\n");
        }
    }
        for(i=0;i<n;i++)
    printf("%d,a[i]");
    return 0;
}
